{
  "extends": "./.svelte-kit/tsconfig.json",
  "compilerOptions": {
    "moduleResolution": "bundler",
    "module": "es2020",
    "lib": ["es2020", "dom"],
    "target": "es2019",
    "noEmit": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "allowJs": true,
    "checkJs": true,
    "paths": {
      "$components": ["src/components"],
      "$components/*": ["src/components/*"],
      "$lib":["src/lib"],
      "$lib/*": ["src/lib/*"],
      "$static": ["static"],
      "$static/*": ["static/*"],
    }
  },
}
